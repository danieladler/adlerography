    </nav>

    <div id="hero">
      <h2 class="title-hero"> Adlerography </h2>
    </div>

    <div id="main-content">
      <div class="modal">
        <div class="modal-close"> X </div>
        <div class="slider-wrap" data-section="1">
          <ul class="slider">
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-8.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-4.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-6.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-1.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-2.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-3.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-7.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-5.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-11.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-9.jpg"/></li>
            <li><img src="https://s3-us-west-2.amazonaws.com/adlerography/eur-2005/eur-2005-10.jpg"/></li>
          </ul>
        </div>
        <div class="slider-wrap" data-section="2">
          <ul class="slider">
            <li><img src="http://s.fotorama.io/3.jpg"/></li>
            <li><img src="http://s.fotorama.io/4.jpg"/></li>
          </ul>
        </div>
      </div>
      <div class="images">
        <div class="image" data-section="1">
          <div class="image-content">
            <h3 class="date" data-section="1"> 2005 </h3>
            <h2 class="placename" data-section="1"> placename 1 </h2>
          </div>
        </div>
        <div class="image" data-section="2">
          <div class="image-content">
            <h3 class="date" data-section="2"> 2007 </h3>
            <h2 class="placename" data-section="2"> placename 2 </h2>
          </div>
        </div>
        <div class="image">
          <div class="image-content">
            <h3 class="date"> 2007 </h3>
            <h2 class="placename"> placename 3 </h2>
          </div>
        </div>
        <div class="image">
          <div class="image-content">
            <h3 class="date"> 2009 </h3>
            <h2 class="placename"> placename 4 </h2>
          </div>
        </div>
        <div class="image">
          <div class="image-content">
            <h3 class="date"> 2016 </h3>
            <h2 class="placename"> placename 5 </h2>
          </div>
        </div>
        <div class="image">
          <div class="image-content">
            <h3 class="date"> 2017 </h3>
            <h2 class="placename"> placename 6 </h2>
          </div>
        </div>
      </div>
      <div class="tl-wrapper">
        &nbsp;
      </div>
    </div>
  </body>

  <script>
    $(document).ready(function(){
      const modal = $('.modal');

      $('.placename, .date').click(function(e) {
        const section = $(this).attr('data-section');
        const slider = $(`.slider-wrap[data-section="${section}"]`);
        modal.addClass('active');
        slider.addClass('active');
        $(window).trigger('resize');
      });

      $('.modal-close').click(function() {
        $('.modal').removeClass('active');
        $('.slider-wrap').removeClass('active');
      });

      $('.slider').bxSlider({
        mode: 'fade',
        adaptiveHeight: true,
        auto: true,
        pause: 3000
      });
    });
  </script>
</html>
